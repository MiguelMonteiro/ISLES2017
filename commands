#!/bin/bash

JOB_NAME=svhn_20

OUTPUT_PATH=logs
DATA_PATH=isles2017.tfrecord

gcloud ml-engine local train \
    --module-name trainer.task \
    --package-path trainer/ \
    --distributed \
    -- \
    --file-path $DATA_PATH \
    --train-steps 2 \
    --job-dir $OUTPUT_PATH



JOB_NAME=isles_cross_entropy_loss
BUCKET_NAME=coral-weaver-4010
OUTPUT_PATH=gs://$BUCKET_NAME/$JOB_NAME
DATA_PATH=gs://$BUCKET_NAME/data/isles2017.tfrecord
REGION=us-east1

gcloud ml-engine jobs submit training $JOB_NAME \
    --job-dir $OUTPUT_PATH \
    --runtime-version 1.2 \
    --module-name trainer.task \
    --package-path trainer/ \
    --scale-tier CUSTOM \
    --config config.yaml \
    --region $REGION \
    -- \
    --file-path $DATA_PATH \
    --train-steps 500 \
    --num-epochs 10 \
    --verbosity DEBUG

python -m tensorflow.tensorboard --logdir=$OUTPUT_PATH

python -m tensorflow.tensorboard --logdir=logs

gsutil cp isles2017.tfrecord gs://coral-weaver-4010/data